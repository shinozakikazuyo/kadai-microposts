<% if users.any? %>
  <!-- 先頭マークの無いリスト -->
  <ul class="list-unstyled">
      
    <% users.each do |user| %>
      <li class="media">
        <img class="mr-2 rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'View profile', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
    
  </ul>
  
  <%= paginate users %>
  
<% end %>